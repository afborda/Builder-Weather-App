{

  "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "baseUrl": "./",
        "paths": {
            "@src/*": ["./src/*"],
            "@components/*": ["./components/*"],
            "@constants/*": ["./constants/*"],
            "@services/*": ["./services/*"],
            "@assets/*": ["./assets/*"],
            "@screens/*": ["./src/screen"],
            "@navigation/*": ["./navigation/*"],
            "@global/*": ["./global/*"],
        }
    },
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
}
